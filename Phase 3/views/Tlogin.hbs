<title>Login as a Technician</title>
<link rel="stylesheet" type="text/css" href="/static/css/3a-login-page.css" />
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
<script src="/static/script.js" defer></script>
<script src="/static/student.js" defer></script>

<div class="container-main-layout">

    <div class="student-leftside-div">

        <div class="Form">

            <form action="/techhomepage" name="Formfill" onsubmit="return  TechloginValidation(event)">

                <div class="login-as-text">
                    Technician
                </div>

                <div class="input-box">
                    <input type="email" placeholder="Email" id="email" name="email" required>
                    <box-icon type='solid' name='balloon'></box-icon>
                </div>

                <div class="input-box">
                    <input type="password" placeholder="Password" id="password" name="password" required>
                </div>

                <p id="result-login"></p>

                <div class="remember-forgot">
                    <label><input type="checkbox"> Remember me</label>
                </div>

                <a href="/techhomepage"><input type="submit" value="Login"></a>


            </form>
        </div>



    </div>
    <div class="rightside-div">
        <div class="student-image-container">
        </div>
    </div>
