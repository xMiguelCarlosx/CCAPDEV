
  <title>Login as a Student</title>
          <link rel="stylesheet" href="/static/css/3a-login-page.css">
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
      <script src="/static/js/script.js" defer></script>
      <script src="/static/js/student.js" defer></script>

  
        <div class="container-main-layout">

            <div class="student-leftside-div">

                <div class="Form">

                    <form action="/homepage" name="Formfill" onsubmit="return loginValidation(event)">

                        <div class="login-as-text">
                            Student 
                        </div>
            
                        <div class="input-box">
                            <input type="email" placeholder="Email" id="email" name="email" required>
                            <box-icon type='solid' name='balloon'></box-icon>
                        </div>

                        <div class="input-box">
                            <input type="password" placeholder="Password" id="password" name="password" required>
                        </div>

                        <p id="result-login"></p>

                        <div class="remember-forgot">
                            <label><input type="checkbox"> Remember me</label>
                        </div>

                        <a href="/homepage"><input type="submit" value="Login"></a>

                        <div class="register-link">
                            <p>Don't have an account? <a href="/register">Register</a></p>
                        </div>


                    </form>
                </div>
            
            
            
            </div>
            <div class="rightside-div">
                <div class="student-image-container">
                </div>
            </div>
